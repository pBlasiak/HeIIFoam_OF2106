FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];
internalField   uniform (0 0 0);

boundaryField
{
    inlet      
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

	symmetryPlane
	{
		type  symmetryPlane;
	}

    outlet      
    {
        type            zeroGradient;
/*
		type directionMixed;
		refValue uniform (0 0 0);
		refGradient uniform (0 0 0);
		valueFraction uniform (0 0 0 1 0 1);
*/

    }

    fixedWalls      
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    frontAndBack    
    {
        type            empty;
    }
}

