FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

//dimensions      [0 2 -2 0 0 0 0];
dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet      
    {
        type            fixedGradient;
		gradient		uniform 0.0;
    }

	symmetryPlane
	{
		type  symmetryPlane;
	}

    outlet      
    {
        type            fixedValue;
		value			uniform 0; 
    }

    fixedWalls      
    {
        type            zeroGradient;
    }

    frontAndBack    
    {
        type            empty;
    }
}

